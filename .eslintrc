{
    "parser": "babel-eslint",
    "extends": [
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "modules": true
        },
        "ecmaVersion": 7,
        "sourceType": "module"
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "max-len": [
            2,
            100,
            2,
            {
                "ignoreComments": true
            }
        ], // max length 100,
        "import/no-unresolved": [
            0
        ],
        "class-methods-use-this": 0,
        "global-require": 0,
        "no-param-reassign": 0,
        "linebreak-style": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/forbid-prop-types": 0,
        "no-plusplus": 0,
        "no-use-before-define": 0,
        "arrow-parens": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "prefer-spread": 0,
        "new-cap": 0,
        "no-useless-escape": 0,
        "react/self-closing-comp": 0,
        "react/no-string-refs": 0,
        "react/no-find-dom-node": 0,
        "react/no-unused-prop-types": 0,
        "no-underscore-dangle": 0,
        "arrow-body-style": 0,
        "camelcase": 0,
        "react/style-prop-object": 0
    },
    "env": {
        "browser": true,
        "node": true
    },
    "ecmaFeatures": {
        "jsx": true
    }
}